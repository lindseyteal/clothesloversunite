<%= form_with(model: clothing, local: true) do |form| %>
  <% if clothing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(clothing.errors.count, "error") %> prohibited this clothing from being saved:</h2>

      <ul>
      <% clothing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :clothing_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :clothing_description %>
  </div>

  <div class="field">
    <%= form.label :clothing_type_id %>
    <%= form.collection_select(:clothing_type_id, @clothing_type, :id, :clothing_category, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :gender_id %>
    <%= form.collection_select(:gender_id, @gender.order(:gender_style), :id, :gender_style, prompt: true) %>
    </select>
 
  </div>

  <div class="field">
    <%= form.label :clothing_size_id %>
    <%= form.collection_select(:clothing_size_id, @clothing_size, :id, :size, prompt: true) %>
    </select>
  </div>

  <div class="field">
    <%= form.label :item_price %>
    <%= form.number_field :item_price, id: :clothing_item_price, in: 1.0..10.0, step: 0.5 %>
  </div>

  <div class="field">
    <%= form.label :postage_price %>
    <%= form.number_field :postage_price, id: :clothing_postage_price, in: 1.0..10.0, step: 0.5 %>
  </div>

  <div class="field">
    <%= form.label :image_data %>
    <%= form.hidden_field :image, value: @clothing.cached_image_data %>
    <%= form.file_field :image, id: :photo_image_data %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
