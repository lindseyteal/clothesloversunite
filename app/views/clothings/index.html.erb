<div class='clothingform'>
<br><br><br>

<p id="notice"><%= notice %></p>

<h1>find your new favourtie piece</h1>
<br>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
  
<% @clothings.each do |clothing| %>
  <div class="row">  
    <% if clothing.image_data.present? %>
        <%= image_tag clothing.image_url(:medium) %>
        <% end %>
    <br>
    <%= clothing.title %>
    <br>
     <%='Price:'%>
    <%= number_to_currency(clothing.item_price) %>
    <br>
    <%= link_to 'Show', clothing %>
        <% end %>
  </div>

<br>
