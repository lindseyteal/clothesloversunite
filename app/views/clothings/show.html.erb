<p id="notice"><%= notice %></p>

<p>
  <strong>Posted by:</strong>
  <%= @clothing.user_id %> 
</p>

<p>
  <strong>Title:</strong>
  <%= @clothing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @clothing.description %>
</p>

<p>
  <strong>Clothing type:</strong>
  <%= @clothing_type.clothing_category %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @gender.gender_style %>
</p>

<p>
  <strong>Clothing size:</strong>
  <%= @clothing_size.size %>
</p>

<p>
  <strong>Item price:</strong>
  <%= @clothing.item_price %>
</p>

<p>
  <strong>Postage price:</strong>
  <%= @clothing.postage_price %>
</p>

<p>
  <strong>Image data:</strong>
  <% if @clothing.image.present? %>
    <%= image_tag @clothing.image_url(:medium) %>
  <% end %>
</p>

